
# ☀1️⃣❕

🧼 = sorted
🖨 = print
🤐 = zip
👆 = abs

def 🔢(✖): return int(✖)

def 👓(✏):
    return [🚣‍♂️.strip() for 🚣‍♂️ in open(✏).readlines()]


# 🟩🟩🟩🅿1️⃣🟩🟩🟩

🧾 = 👓('input/1️⃣.txt')

🤛 = [int(🚣‍♂️.split('   ')[0]) for 🚣‍♂️ in 🧾 if 🚣‍♂️]
🤜 = [int(🚣‍♂️.split('   ')[1]) for 🚣‍♂️ in 🧾 if 🚣‍♂️]

🤛🧼 = 🧼(🤛)
🤜🧼 = 🧼(🤜)

🎉 = 0
for 🤛✖, 🤜✖ in 🤐(🤛🧼, 🤜🧼):
    🎉 += 👆(🤛✖ -  🤜✖)

🖨(🎉)

# 🟩🟩🟩🅿2️⃣🟩🟩🟩


©🤜 = {}
for 🤜✖ in 🤜:
    if 🤜✖ not in ©🤜:
        ©🤜[🤜✖] = 1
    else:
        ©🤜[🤜✖] += 1

🎉🎉 = 0
for 🤛✖ in 🤛:
    if 🤛✖ in ©🤜: 
        🎉🎉 += 🤛✖ * ©🤜[🤛✖]

🖨(🎉🎉)